<%= form_with model: group, local: true do |f| %>
  <div class="form_group">
    <%= f.label :グループ名 %>
    <%= f.text_field :name, class: 'form-control group_title' %>
  </div>
  <div class= "form-group">
    <%= f.label :紹介文 %>
    <%= f.text_area :introduction, class: 'form-control group_introduction' %>
  </div>
  <div class="form_group">
    <%= f.label :グループ画像 %>
    <%= f.file_field :group_image, class: 'form-control-file group_image', accept: 'image/*' %>
  </div>
  <div class="form_group">
     <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>